@model Buffet.ViewModels.Buffet.Evento.DeleteEventoViewModel

@{
    ViewData["Title"] = "Deletar Evento";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <p class="card-header">Deletar cliente @Model.Nome</p>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <strong>Atenção:</strong> Essa operação não pode ser desfeita!
                    </div>
                    <form Method="post" action="/Evento/EventoDeleteIt/@Model.Id">
                        <div class="form-group">
                            <label for="nome">Nome</label>
                            <input class="form-control" type="text" name="nome" id="nome" value="@Model.Nome" readonly />
                        </div>

                        <div class="form-group">
                            <label for="descricao">Descricao</label>
                            <input class="form-control" type="text" name="descricao" id="descricao" value="@Model.Descricao"  readonly/>
                        </div>
                      
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Deletar" />
                            <a asp-controller="Evento" asp-action="Eventos" class="btn btn-primary">Voltar</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
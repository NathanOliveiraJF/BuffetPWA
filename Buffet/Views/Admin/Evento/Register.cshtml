@model Buffet.ViewModels.Buffet.Evento.CriarEventoViewModel; 

@{
    ViewData["Title"] = "Cadastro Evento";
}

<div class="container">
    @if (Model.MensagemErro != null)
    {
        <div class="alert alert-danger" role="alert">
            @Model.MensagemErro
        </div>
    }
    <div class="row">
        <div class="col">
            <div class="card">
                <p class="card-header">Cadastro de evento</p>
                <div class="card-body">
                    <form method="post" asp-controller="Evento" asp-action="Create">
                        
                        <div class="form-group">
                            <label for="nome">Nome</label>
                            <input class="form-control" type="text" name="nome" id="nome" />
                        </div>
                        
                        <div class="form-group">
                            <label for="descricao">Descricao</label>
                            <input class="form-control" type="text" name="descricao" id="descricao" />
                        </div>


                        <div class="form-group">
                            <label for="tipoEvento">Tipo Evento</label>
                            <select class="custom-select custom-select"  id="tipoEvento" name="tipoEvento" asp-items="@Model.TipoEventos"></select>
                        </div>


                        <div class="form-group">
                            <label for="cliente">Cliente</label>
                            <select class="custom-select custom-select"  id="cliente" name="cliente" asp-items="@Model.Clientes"></select>
                        </div>

                        <div class="form-group">
                            <label for="situacao">Situação</label>
                            <select class="custom-select custom-select"  id="situacao" name="situacao" asp-items="@Model.Situacoes"></select>
                        </div>

                        <div class="form-group">
                            <label for="local">Local</label>
                            <select class="custom-select custom-select"  id="local" name="local" asp-items="@Model.LocalEventos"></select>
                        </div>

                        <div class="form-group">
                            <label for="dataInicio">Data Inicio</label>
                            <input class="form-control" type="date" name="dataInicio" id="dataInicio" />
                        </div>

                        <div class="form-group">
                            <label for="dataTermino">Data Términio</label>
                            <input class="form-control" type="date" name="dataTermino" id="dataTermino" />
                        </div>

                        <div class="form-group">
                            <label for="textoObservacao">Texto de obervação</label>
                            <textarea class="form-control" id="textoObservacao" name="textoObservacao"></textarea>
                        </div>
                        <input class="btn btn-primary" type="submit" value="Cadastrar" />
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

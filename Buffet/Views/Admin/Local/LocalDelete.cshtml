@model Buffet.ViewModels.Buffet.Local.DeletarLocalViewModel; 

@{
    ViewData["Title"] = "Deletar LocalEntity";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <p class="card-header">Deletar Local @Model.Descricao</p>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <strong>Atenção:</strong> Essa operação não pode ser desfeita!
                    </div>
                    <form Method="post" action="/Local/LocalDeleteIt/@Model.Id">
                        <div class="form-group">
                            <label for="descricao">Local</label>
                            <input class="form-control" type="text" name="descricao" id="descricao" value="@Model.Descricao" readonly />
                        </div>

                        <div class="form-group">
                            <label for="endereco">Email</label>
                            <input class="form-control" type="text" name="endereco" id="endereco" value="@Model.Endereco"  readonly/>
                        </div>
                       
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Deletar" />
                            <a asp-controller="Local" asp-action="Locais" class="btn btn-primary">Voltar</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@model string; 

@{
    ViewData["Title"] = "Cadastro Cliente";
}

<div class="container">
    @if (Model != null)
    {
        <div class="alert alert-success" role="alert">
            @Model
        </div>
    }
    <div class="row">
        <div class="col">
            <div class="card">
                <p class="card-header">Cadastro de cliente</p>
                <div class="card-body">
                    <form method="post" asp-controller="Client" asp-action="Register">
                        <div class="form-group">
                            <label for="nome">Nome</label>
                            <input class="form-control" type="text" name="nome" id="nome" />
                        </div>
                        <div class="form-group">
                            <label for="tipoCliente">Tipo Cliente</label>
                            <select id="tipoCliente" name="tipoCliente" class="custom-select custom-select">
                                <option value="fisico" selected>Cliente Físico</option>
                                <option value="juridico">Cliente Jurídico</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input class="form-control" type="text" name="email" id="email" />
                        </div>

                        <div class="form-group">
                            <label for="cpf">Cpf</label>
                            <input class="form-control" type="text" name="cpf" id="cpf" />
                        </div>
                        <div class="form-group">
                            <label for="endereco">Endereço</label>
                            <input class="form-control" type="text" name="endereco" id="endereco" />
                        </div>
                        <div class="form-group">
                            <label for="dataNascimento">Data de nascimento</label>
                            <input class="form-control" type="date" name="dataNascimento" id="dataNascimento" />
                        </div>

                        <div class="form-group">
                            <label for="cnpj">Cnpj</label>
                            <input class="form-control" type="text" name="cnpj" id="cnpj" disabled />
                        </div>
                        <div class="form-group">
                            <label for="textoObservacao">Texto de obervação</label>
                            <textarea class="form-control" id="textoObservacao" name="textoObservacao"></textarea>
                        </div>
                        <input class="btn btn-primary" type="submit" value="Cadastrar" />
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let select = document.getElementById('tipoCliente');
    let cpf = document.getElementById('cpf');
    let cnpj = document.getElementById('cnpj');

    select.addEventListener('change', function () {
        console.log(select.value);

        if (select.value === "juridico") {
            cnpj.removeAttribute("disabled");
            cpf.setAttribute("disabled", true);
        }
        else  {
            cpf.removeAttribute("disabled");
            cnpj.setAttribute("disabled", false);
        }
            
    });
</script>
@model Buffet.ViewModels.Buffet.Cliente.EditarClientViewModel;
@{
    ViewData["Title"] = "Editar Cliente ";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <p class="card-header">Editar cliente @Model.Nome</p>
                <div class="card-body">
                    <form Method="post" action="/Client/ClientEdit/@Model.Id">
                        <div class="form-group">
                            <label for="nome">Nome</label>
                            <input class="form-control" type="text" name="nome" id="nome" value="@Model.Nome" />
                        </div>

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input class="form-control" type="text" name="email" id="email" value="@Model.Email" />
                        </div>
                        @if (Model.Cpf != "")
                        {
                            <div class="form-group">
                                <label for="cpf">Cpf</label>
                                <input class="form-control" type="text" name="cpf" id="cpf" value="@Model.Cpf" />
                            </div>
                        }
                       
                        <div class="form-group">
                            <label for="endereco">Endereço</label>
                            <input class="form-control" type="text" name="endereco" id="endereco" value="@Model.Endereco" />
                        </div>
                        <div class="form-group">
                            <label for="dataNascimento">Data de nascimento</label>
                            <input class="form-control" type="date" name="dataNascimento" id="dataNascimento" value="@Model.DataNascimento" />
                        </div>
                        @if (Model.Cnpj != "")
                        {
                            <div class="form-group">
                                <label for="cnpj">Cnpj</label>
                                <input class="form-control" type="text" name="cnpj" id="cnpj" value="@Model.Cnpj" />
                            </div>
                        }

                        <div class="form-group">
                            <label for="textoObservacao">Texto de obervação</label>
                            <textarea class="form-control" id="textoObservacao" name="textoObservacao">@Model.TextoObservacao</textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-success" value="Editar" />
                            <a asp-controller="Client" asp-action="Clientes" class="btn btn-primary">Voltar</a>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
    <hr>
     <h4>Eventos do Clients</h4>
        
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Descricao</th>
                <th scope="col">Tipo do evento</th>
                <th scope="col">situação do Evento</th>
                <th scope="col">Local</th>
                <th>Ações</th>
            </tr>
            </thead>
            <tbody>
            @if (@Model.Eventos.Any())
            {
                @foreach (var c in @Model.Eventos)
                {
                    <tr>
                        <td>@c.Descricao</td>
                        <td>@c.TipoEvento</td>
                        <td>@c.Situacao</td>
                        <td>@c.Local</td>
                        <td>
                            <a asp-controller="Evento" asp-action="EventoEdit" asp-route-id="@c.Id">Editar</a> |
                            <a asp-controller="Evento" asp-action="EventoDelete" asp-route-id="@c.Id">Deletar</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <th class="text-center" colspan="6">Não há Eventos cadastrados</th>
                </tr>
            }
    
            </tbody>
        </table>
</div>
@model Buffet.ViewModels.Buffet.SituacaoEvento.DeleteSituacaoEventoViewModel;

@{
    ViewData["Title"] = "Deletar Situação do Evento";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <p class="card-header">Deletar Situação do Evento @Model.Descricao</p>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <strong>Atenção:</strong> Essa operação não pode ser desfeita!
                    </div>
                    <form action="/SituacaoEvento/DeleteIt/@Model.Id" method="post">
                        <div class="form-group">
                            <label for="codigo">Código da situação do evento</label>
                            <input class="form-control" type="text" id="codigo" value="@Model.Id" readonly />
                        </div>
                        <div class="form-group">
                            <label for="descricao">descricao</label>
                            <input class="form-control" type="text" name="descricao" id="descricao" value="@Model.Descricao" readonly />
                        </div>
                        <div class="form-group">
                            <input class="btn btn-success" type="submit" value="Deletar" />
                            <a class="btn btn-primary" href="/SituacaoEvento/SituacaoEventos">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
</div>
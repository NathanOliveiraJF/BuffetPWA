@model Buffet.ViewModels.CadastrarViewModel;

@{
    ViewData["Title"] = "Criar Conta";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="height: 80vh">
        <div class="col-md-5 border  rounded-lg shadow-lg p-4">
            <p class="h2 text-center">Criar Conta</p>
            @if (Model.Mensagem != null)
            {
                <div class="alert alert-success" role="alert">
                    @Model.Mensagem
                </div>
            }

            @if (Model.ErrorsRegister != null)
            {
                <ul>
                    @foreach (var error in Model.ErrorsRegister)
                    {
                        <li>
                            <div class="alert alert-danger" role="alert">
                                @error
                            </div>
                        </li>
                    }
                </ul>
            }
            <form method="post" action="/Acesso/Register">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control  btn-lg btn-block py-4" id="email" name="email" aria-describedby="emailHelp" placeholder="Email...">
                </div>
                <div class="form-group">
                    <label for="senha">Senha</label>
                    <input type="password" class="form-control btn-lg btn-block  py-4" id="senha" name="senha" placeholder="Senha...">
                </div>
                <div class="form-group">
                    <label for="senha-conf">Confirmar Senha</label>
                    <input type="password" class="form-control btn-lg btn-block  py-4" id="senha-conf" name="senhaConfirmacao" placeholder="Confirmar Senha">
                </div>

                <input type="submit" class="btn btn-success mt-3 py-2 btn-lg w-50" value="Criar Conta" />

            </form>
        </div>
    </div>
</div>
